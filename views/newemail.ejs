<!DOCTYPE html>
<html lang="zh-cn">
  <head>
    <meta charset="utf-8">
    <title>我是标题</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/flat-ui.css" rel="stylesheet">
    <script src="/javascripts/jquery-1.8.2.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
  </head>
  <body style="background-color:#f2f2f2;overflow:hidden;">
    <img onclick="window.open('http://codingbattlefront.herokuapp.com')" onmouseover="$(this).animate({right:'0px'},200)" onmouseout="$(this).animate({right:'-68px'},200)" src="/images/codinglogo.png" style="cursor:pointer;position:fixed;right:-68px;bottom:0px;z-index:100;" width="128" height="46" />
  <script type="text/javascript">
  $(document).ready(function() {  
  $("#content,#email").focus(function (){
    $(this).parent().removeClass("error");
  })
  $("#confirmbtn").click(function (){
    if ($("#time").get(0).selectedIndex==0){
      $('#myModal').modal('toggle');
      return;
    };
    if ($("#content").val() == ""){
      $("#content").parent().addClass("error");
      return;
    }
    if ($("#email").val() == ""){
      $("#email").parent().addClass("error");
      return;
    }
     $("#submit").trigger("click");
  })
  })
  </script>
    <div class="container" >
      <div class="row-fluid">
        <div class="span12"></div>
      </div>
      <div class="row-fluid">
        <div class="span9">
      <form method="post" id="mainform">

            <div class="row-fluid" >
              <div class="control-group">
                  <textarea style="font-size:18px" class="span12" id="content" name="content" placeholder="输入邮件内容" rows="27"></textarea>
              </div>
            </div>
            <div class="row-fluid" style="display:none;">
              <button type="submit" id="submit" class="btn btn-large btn-block btn-info">确认</button>
            </div>
      </form>
        </div>
               <div class="span3">
                 <div class="row-fluid">
                   <div class="control-group">
                     <input style="height:40px;" form="mainform" class="span12" type="email" id="email" name="email" placeholder="输入目标邮箱">
                   </div>
                 </div>
                 <div class="row-fluid">
                   <select id="time" value="choosedate" class="span12" tabindex="1" name="herolist">
                        <option value="0">选择日期</option>
                        <option value="1">半年后</option>
                        <option value="2">一年后</option>
                        <option value="3">五年后</option>
                        <option value="4">十年后</option>
                      </select>
                 </div>
                  <div class="row-fluid" style="margin-top:420px;">
              <button id="confirmbtn" class="btn btn-large btn-block btn-info">确认</button>
            </div>
               </div>   
      </div>
    </div>
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  <h3 id="myModalLabel">提示</h3>
  </div>
  <div class="modal-body">
  <p><font size=4>请选择发送日期</font></p>
  </div>
  <div class="modal-footer">
  <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">确定</button>
  <input type="hidden" name="_csrf" value="<%= token %>" form="mainform"/>
  </div>
  </div> 
    <script src="/javascripts/jquery-ui-1.10.0.custom.min.js"></script>
    <script src="/javascripts/jquery.dropkick-1.0.0.js"></script>
    <script src="/javascripts/custom_checkbox_and_radio.js"></script>
    <script src="/javascripts/custom_radio.js"></script>
    <script src="/javascripts/jquery.tagsinput.js"></script>
    <script src="/javascripts/bootstrap-tooltip.js"></script>
    <script src="/javascripts/jquery.placeholder.js"></script>
    <script src="http://vjs.zencdn.net/c/video.js"></script>
    <script src="/javascripts/application.js"></script>
  </body>
</html>